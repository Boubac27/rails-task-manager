<h1>New task</h1>

<%= form_for(@task, url: tasks_path, method: :post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :completed %>
  <%= f.text_field :completed %>

  <%= f.submit %>
<% end %>

<%= link_to "Back to list", index_path %>
